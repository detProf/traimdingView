FROM python:3.10-slim

WORKDIR /app

# Copy only web dashboard files
COPY web_dashboard.py /app/web_dashboard.py
COPY requirements_web_dashboard.txt /app/requirements_web_dashboard.txt

RUN pip install --no-cache-dir -r requirements_web_dashboard.txt

EXPOSE 5007

CMD ["gunicorn", "-w", "4", "-b", "0.0.0.0:5007", "web_dashboard:app"]
